<body>
    <!-- <div class="background-image"></div> -->

    <div class="container">
        <form class="form-page" action="/post" method="POST" id="createAccount">
            <h1 class="form_title">JOB POSTING</h1>
            <div class="form_message form_message-error"></div>
            <div class="form_input-group">
                <label for="job-title">Job Title:</label>
                <input type="text" class="form_input" name="name" autofocus placeholder="Product Designer">
                <div class="form_input-error-message"></div>
            </div>

            <div class="form_input-group">
                <label for="location">Location:</label>
                <input type="text" class="form_input" name="location" autofocus placeholder="e.g. San Francisco">
                <div class="form_input-error-message"></div>
            </div>
            <div class="form_input-group">
                <label for="company-name">Company Name:</label>
                <input type="text" class="form_input" name="companyname" autofocus placeholder="Enter the company name">
                <div class="form_input-error-message"></div>
            </div>

            <div class="form_input-group">
                <label for="salary">Salary</label>
                <input type="text" class="form_input" name="salary" autofocus placeholder="e.g. 5000">
                <div class="form_input-error-message"></div>
            </div>

            <!-- <div class="form_input-group"> -->
                <!-- <label for="job-title">Job Description:</label> -->
                <!-- <textarea rows="5" cols="10" style = "width:150px;height: 17px;"> -->
                    <!-- Enter the related content here... -->
                <!-- </textarea> -->
                
            <!-- </div> -->
            <div class="editor">
                <label for="job-description">Job Description</label>
                <div class="row">
                    <div class="col1">
                        <div class="first box">
                            <input type="number" id="font-size" min="1" max="100" value="16" onchange="f1(this)">
                        </div>
                        <div class="second box">
                            <button type="button" onclick="f2(this)">
                                <i class="fa-solid fa-bold"></i>
                            </button>
                            <button type="button" onclick="f3(this)">
                                <i class="fa-solid fa-italic"></i>
                            </button>
                            <button type="button" onclick="f4(this)">
                                <i class="fa-solid fa-underline"></i>
                            </button>
                        </div>
                        <div class="third box">
                            <button type="button" onclick="f5(this)">
                                <i class="fa-solid fa-align-left"></i>
                            </button>
                            <button type="button" onclick="f6(this)">
                                <i class="fa-solid fa-align-center"></i>
                            </button>
                            <button type="button" onclick="f7(this)">
                                <i class="fa-solid fa-align-right"></i>
                            </button>
                        </div>
                        <div class="fourth box">
                            <button type="button" onclick="f8(this)">
                                aA
                            </button>
                            <button type="button" onclick="f9(this)">
                                <i class="fa-solid fa-text-slash"></i>
                            </button>
                            <input type="color" onchange="f10(this)">
                        </div>
                        <br>
                        <div class="col">
                            <textarea name="comment" placeholder="Your text here"></textarea>
                        </div>
                    </div>
                </div>
            </div>

            <div class="selectdiv">
                <label for="job_type">Job Type</label>
                <label>
                    <select>
                        <option selected>Select..</option>
                        <option>Full-Time</option>
                        <option>Internship</option>
                        <option>Part-Time</option>
                    </select>
                </label>
            </div>
            <br/>
            <br/>
            <br/>
            <br/>
            <br/>
            <button class="form_button" type="submit">POST</button>
            <!-- <p class="form_text">
